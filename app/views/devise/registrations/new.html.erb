<%= render "shared/header" %>


  
<%= form_with model: @user, url: user_registration_path,id:"nanka",class: "devise-registration-main",local: true do |f| %>
  <div class = "devise-form-wrap">
    <div class = "devise-form-header">
      <h2 class = "new-registration">新規登録</h2>
    </div>
    <%= render "devise/shared/error_messages", resource: resource %>
   <%# ニックネーム %>
   <div class="field-group">
      <%= f.label :nickname %><br/>
      <%= f.text_area :nickname, autocomplete: "new-password" %>
    </div>
  <%# Email %>
   <div class="field-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  <%# パスワード %>
  <div class="field-group">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>
 <%# パスワード確認 %>
  <div class="field-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
  
  <div class="field-group">
    <%= f.label :age %><br />
    <%= f.text_area :age, autocomplete: "new-password" %>
  </div>
  <div class="field-group">
    <%= f.label :gender %><br />
    <%= f.collection_select(:gender_id, Gender.all, :id, :name, {}, {class:"select-box", id:"item-sales-status"})  %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
<%= render "shared/second_footer" %>
